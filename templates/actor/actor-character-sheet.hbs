<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-5col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}

        <div class="resource flex-group-center">
          <label for="system.species" class="resource-label">{{localize 'SLUMDOGS.Labels.species'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.species" value="{{system.species}}" data-dtype="String" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">{{localize 'SLUMDOGS.Labels.health'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.armor.value" class="resource-label">{{localize 'SLUMDOGS.Labels.armor'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.armor.value" value="{{system.attributes.armor.value}}"
              data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.armor.value" class="resource-label">{{localize
            'SLUMDOGS.Labels.essenz'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.essenz.value" value="{{system.attributes.essenz.value}}"
              data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.armor.value" class="resource-label">{{localize 'SLUMDOGS.Labels.karma'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.karma.value" value="{{system.attributes.karma.value}}"
              data-dtype="Number" />
          </div>
        </div>
          
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="features">{{localize 'SLUMDOGS.Labels.overview'}}</a>
    <a class="item" data-tab="booster">{{localize 'SLUMDOGS.Labels.boosters'}}</a>
    <a class="item" data-tab="weapon">{{localize 'SLUMDOGS.Labels.weapons'}}</a>
    <a class="item" data-tab="skills">{{localize 'SLUMDOGS.Labels.skills'}}</a>
    <a class="item" data-tab="items">{{localize 'SLUMDOGS.Labels.items'}}</a>
    <a class="item" data-tab="description">{{localize 'SLUMDOGS.Labels.biography'}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">


      <section>
        <h3 class="section-header"><strong>{{localize 'SLUMDOGS.Labels.attributes'}}</strong></h3>

        <section class="grid grid-6col">


          <div class="resource flex-group-center">
            <label for="system.abilities.strength.value" class="resource-label rollable"
              data-roll="{{system.abilities.strength.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Strength.long'}}">{{localize
              'SLUMDOGS.Ability.Strength.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.strength.value" value="{{system.abilities.strength.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.dexterity.value" class="resource-label rollable"
              data-roll="{{system.abilities.dexterity.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Dexterity.long'}}">{{localize
              'SLUMDOGS.Ability.Dexterity.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.dexterity.value" value="{{system.abilities.dexterity.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.willpower.value" class="resource-label rollable"
              data-roll="{{system.abilities.willpower.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Willpower.long'}}">{{localize
              'SLUMDOGS.Ability.Willpower.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.willpower.value" value="{{system.abilities.willpower.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.logic.value" class="resource-label rollable"
              data-roll="{{system.abilities.logic.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Logic.long'}}">{{localize 'SLUMDOGS.Ability.Logic.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.logic.value" value="{{system.abilities.logic.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.charisma.value" class="resource-label rollable"
              data-roll="{{system.abilities.charisma.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Charisma.long'}}">{{localize
              'SLUMDOGS.Ability.Charisma.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.charisma.value" value="{{system.abilities.charisma.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.edge.value" class="resource-label rollable"
              data-roll="{{system.abilities.edge.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Edge.long'}}">{{localize 'SLUMDOGS.Ability.Edge.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.edge.value" value="{{system.abilities.edge.value}}"
                data-dtype="Number" />
            </div>
          </div>
        </section>

        <section class="grid grid-3col">
          <div class="resource flex-group-center">
            <label for="system.abilities.perception.value" class="resource-label rollable"
              data-roll="{{system.abilities.perception.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Perception.long'}}">{{localize
              'SLUMDOGS.Ability.Perception.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.perception.value" value="{{system.abilities.perception.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.dodge.value" class="resource-label rollable"
              data-roll="{{system.abilities.dodge.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Dodge.long'}}">{{localize 'SLUMDOGS.Ability.Dodge.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.dodge.value" value="{{system.abilities.dodge.value}}"
                data-dtype="Number" />
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.abilities.survival.value" class="resource-label rollable"
              data-roll="{{system.abilities.survival.value}}"
              data-label="{{localize 'SLUMDOGS.Ability.Survival.long'}}">{{localize
              'SLUMDOGS.Ability.Survival.long'}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="text" name="system.abilities.survival.value" value="{{system.abilities.survival.value}}"
                data-dtype="Number" />
            </div>
          </div>
        </section>
      </section>
      <section>
        <h3 class="section-header"><strong>Fertigkeiten</strong></h3>
        <section class="grid grid-3col">
          {{#each skills as |item id|}}
          <div class="resource-content flexrow flex-center flex-between">
            <div class="actor-skills-entry rollable" data-roll="{{item.system.totalDice}}" data-label="{{item.name}}">
              <strong title="+ {{item.system.attrName}}">{{item.name}}</strong>
              <strong title="+ {{item.system.attrName}}">{{item.system.totalDice}}</strong>
            </div>
          </div>
          {{/each}}
        </section>
      </section>
      <section>
        <h3 class="section-header"><strong>Booster</strong></h3>
        <section class="grid grid-3col">
          {{#each boosters as |item id|}}
          <div class="resource-content flexrow flex-center flex-between">
            <div class="actor-skills-entry">
              <strong title="{{item.system.effectDescription}}">{{item.name}}</strong>
            </div>
          </div>
          {{/each}}
        </section>
      </section>

      <section>
        <h3 class="section-header"><strong>Vor- und Nachteile</strong></h3>
        <section class="grid grid-3col">
          <div class="resource-content flexrow flex-center flex-between">
            <div>
              <textarea name="system.disAdvantage1" data-dtype="String">{{system.disAdvantage1}}</textarea>
            </div>
          </div>
          <div class="resource-content flexrow flex-center flex-between">
            <div>
              <textarea name="system.disAdvantage2" data-dtype="String">{{system.disAdvantage2}}</textarea>
            </div>
          </div>

          <div class="resource-content flexrow flex-center flex-between">
            <div>
              <textarea name="system.disAdvantage3" data-dtype="String">{{system.disAdvantage3}}</textarea>
            </div>
          </div>
        </section>
      </section>
      <section class="grid grid-2col">
        <section>
          <h3 class="section-header"><strong>{{localize 'SLUMDOGS.Labels.weapons'}}</strong></h3>
          <section class="grid grid-1col">
            {{#each weapons as |item id|}}
            <div class="resource-content flexrow flex-center flex-between">
              <div class="actor-skills-entry">
                <strong title="{{item.system.effectDescription}}">{{item.name}}</strong>
              </div>
            </div>
            {{/each}}
          </section>
        </section>
        <section>
          <h3 class="section-header"><strong>{{localize 'SLUMDOGS.Labels.items'}}</strong></h3>
          <section class="gear grid-1col">
            {{#each gear as |item id|}}
            <div class="resource-content flexrow flex-center flex-between">
              <div class="actor-skills-entry">
                <strong title="{{item.system.effectDescription}}">{{item.name}} x {{item.system.quantity}}</strong>
              </div>
            </div>
            {{/each}}
          </section>
        </section>
      </section>
      <section class="grid grid-2-col">
        <div class="resource flex-group-center">
            <label class="resource-label">&nbsp;</label>
            <div class="resource-content flexrow flex-center flex-between rollable" data-roll="1"
              data-label="{{localize 'SLUMDOGS.Labels.custom_roll'}}">
              <button><i class="fas fa-dice-d6"></i>{{localize 'SLUMDOGS.Labels.custom_roll_dialog'}}</button>
            </div>
          </div>
          <div class="resource flex-group-center">
          <label for="system.iniDice" class="resource-label">{{localize 'SLUMDOGS.Labels.ini'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.iniDice" value="{{system.iniDice}}" data-dtype="Number" />
          </div>
        </div>
      </section>
    </div>

    {{!-- Owned Booster Tab --}}
    <div class="tab booster" data-group="primary" data-tab="booster">
      {{> "systems/slumdogs-vtt/templates/actor/parts/actor-booster.hbs"}}
    </div>

    {{!-- Owned Booster Tab --}}
    <div class="tab weapon" data-group="primary" data-tab="weapon">
      {{> "systems/slumdogs-vtt/templates/actor/parts/actor-weapons.hbs"}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab skills" data-group="primary" data-tab="skills">
      {{> "systems/slumdogs-vtt/templates/actor/parts/actor-skills.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/slumdogs-vtt/templates/actor/parts/actor-items.hbs"}}
    </div>

  </section>
</form>